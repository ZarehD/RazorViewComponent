@page
@model IndexModel
@using Shared.Components
@using WebAppUiComponents.Pages.Shared.Components

@{
	ViewData["Title"] = "Home page";

	var imgCard1 = new ImageInfo("/img/card-1-img.jpg") { AltText = "card-1" };
	var imgCard2 = new ImageInfo("/img/card-2-img.jpg") { AltText = "card-2" };
}

<div class="text-center">
	<h1 class="display-4">Welcome</h1>
	<p class="w-50 mx-auto">
		Learn about component based web development in ASP.NET Razor Pages with
		<a href="https://www.github/ZarehD/RazorViewComponent" target="_blank" class="rvc">
			RazorViewComponent
		</a>.
	</p>

	<h5 class="mt-3 mb-2">Sample Component: Bootstrap Accordion</h5>
	<div class="row justify-content-center">
		<div class="col-12 col-lg-6">
			<bs-accordion>
				<bs-accordion-item show="true">
					<accordion-header>
						<span>Accordion Item 1</span>
					</accordion-header>
					<strong>This is the first item's accordion body.</strong>
					It is shown by default, until the collapse plugin adds the appropriate
					classes that we use to style each element. These classes control
					the overall appearance, as well as the showing and hiding via CSS
					transitions. You can modify any of this with custom CSS or overriding
					our default variables. It's also worth noting that just about any HTML
					can go within the <code>.accordion-body</code>, though the transition
					does limit overflow.
				</bs-accordion-item>
				<bs-accordion-item>
					<accordion-header>
						<span>Accordion Item 2</span>
					</accordion-header>
					<strong>This is the second item's accordion body.</strong> It is hidden by default,
					until the collapse plugin adds the appropriate classes that we use to style each
					element. These classes control the overall appearance, as well as the showing and
					hiding via CSS transitions. You can modify any of this with custom CSS or overriding
					our default variables. It's also worth noting that just about any HTML can go within
					the <code>.accordion-body</code>, though the transition does limit overflow.
				</bs-accordion-item>
			</bs-accordion>
		</div>
	</div>

	<h5 class="mt-3 mb-2">Sample Component: Bootstrap Carousel</h5>
	<div class="row justify-content-center">
		<div class="col-12 col-lg-6">
			<bs-carousel showIndicators="true"
						 rideMode="@CarouselRideMode.Carousel"
						 imgHeight="400">
				<bs-carousel-item imgInfo="@imgCard1">
					<bs-carousel-item-caption>
						<h5>First slide label</h5>
						<p>Some representative placeholder content for the first slide.</p>
					</bs-carousel-item-caption>
				</bs-carousel-item>
				<bs-carousel-item imgInfo="@imgCard2" isActive="true">
					<bs-carousel-item-caption>
						<h5>Second slide label</h5>
						<p>Some representative placeholder content for the second slide.</p>
					</bs-carousel-item-caption>
				</bs-carousel-item>
			</bs-carousel>
		</div>
	</div>

	<h5 class="mt-3 mb-2">Sample Component: Bootstrap Card</h5>
	<div class="row row-cols-2 row-cols-lg-4 gx-3 text-center justify-content-center">
		<div class="col">
			<bs5-card title="Card 1 Title"
					  subTitle="Card 1 Sub-Title"
					  cardImg="@imgCard1">
				<div>Content for first sample card</div>
				<card-links>
					<a href="#" class="card-link">Link 1</a>
					<a href="#" class="card-link">Link 2</a>
				</card-links>
				<card-header>
					Card 1 Header
				</card-header>
				<card-footer>
					Card 1 Footer
				</card-footer>
			</bs5-card>
		</div>
		<div class="col">
			<bs5-card title="Card 2 Title"
					  subTitle="Card 2 Sub-Title"
					  cardImg="@imgCard2">
				<div>Content for second sample card</div>
				<card-links>
					<a href="#" class="card-link">Link 3</a>
					<a href="#" class="card-link">Link 4</a>
				</card-links>
				<card-header>
					Card 2 Header
				</card-header>
				<card-footer>
					Card 2 Footer
				</card-footer>
			</bs5-card>
		</div>
	</div>

</div>
