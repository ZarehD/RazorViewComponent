@model BootstrapCard;

@{
}

<div class="card border-success @Model.CardCss">
	@if (Model.CardImage is not null)
	{
		<img src="@Model.CardImage.Source"
			 alt="@Model.CardImage.AltText"
			 class="card-img-top @Model.CardImage.CssClass"
			 height="200" />
	}
	@if (Model.HasHeaderSlot())
	{
		<div class="card-header">
			@Model.RenderHeaderSlot()
		</div>
	}
	<div class="card-body p-2">
		@if (Model.CardTitle is not null)
		{
			<h5 class="card-title">@Model.CardTitle</h5>
		}
		@if (Model.CardSubTitle is not null)
		{
			<h6 class="card-subtitle">@Model.CardSubTitle</h6>
		}
		@if (Model.HasChildContent())
		{
			<div class="card-body-content mt-2">
				@Model.RenderChildContent()
			</div>
		}
		@if (Model.HasSlot(BsCardNames.Slot.Links))
		{
			<div class="card-body-links mt-2">
				@Model.RenderSlot(BsCardNames.Slot.Links)
			</div>
		}
	</div>
	@if (Model.HasFooterSlot())
	{
		<div class="card-footer">
			@Model.RenderFooterSlot()
		</div>
	}
</div>
